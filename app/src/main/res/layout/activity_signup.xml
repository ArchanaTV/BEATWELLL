<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/app_name" />


        <!-- Sign Up Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/playfair_display"
            android:text="Sign Up"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Username -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="start"
            android:fontFamily="@font/playfair_display"
            android:textStyle="bold"
            android:text="Username"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter username"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_border"
            android:padding="12dp" />

        <!-- Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Password"
            android:fontFamily="@font/playfair_display"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_border"
            android:padding="12dp" />

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Email"
            android:fontFamily="@font/playfair_display"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter email"
            android:layout_marginTop="8dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_border"
            android:padding="12dp" />



        <!-- Gender -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnMale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Male"
                android:backgroundTint="#245671"
                android:textColor="@android:color/white" />


            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnFemale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Female"
                android:backgroundTint="#245671"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnOthers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Others"
                android:backgroundTint="#245671"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Height & Weight -->

        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/playfair_display"
            android:text="Height and  Weight"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">



            <EditText
                android:id="@+id/etHeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="cm"
                android:inputType="number"
                app:layout_constraintTop_toBottomOf="@id/diabetes"
                android:background="@drawable/rounded_border"
                android:padding="12dp" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="kg"
                android:inputType="numberDecimal"
                android:background="@drawable/rounded_border"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Age -->
        <EditText
            android:id="@+id/etAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter age"
            android:inputType="number"
            android:background="@drawable/rounded_border"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <!-- Blood Pressure -->
        <EditText
            android:id="@+id/etBloodPressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter blood pressure"
            android:background="@drawable/rounded_border"
            android:padding="12dp"
            android:layout_marginTop="8dp" />


        <TextView
            android:id="@+id/diabetes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/playfair_display"
            android:text="diabetes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Diabetes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/diabetes"
            android:layout_marginTop="8dp">



            <Button
                android:id="@+id/btnYesDiabetes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yes"
                android:backgroundTint="#245671"
                app:layout_constraintTop_toBottomOf="@id/diabetes"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnNoDiabetes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No"
                android:backgroundTint="#245671"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Treatment Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/playfair_display"
            android:text="Treatment Type"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <RadioGroup
            android:id="@+id/rgTreatment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/rbVascular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:background="@drawable/rounded_border"
                android:text="Vascular stent (PCI)" />

            <RadioButton
                android:id="@+id/rbSurgery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:background="@drawable/rounded_border"
                android:layout_marginTop="8dp"
                android:text="Surgery (Valve Replacement, Heart Transplant)" />

            <RadioButton
                android:id="@+id/rbNonSurgical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:background="@drawable/rounded_border"
                android:layout_marginTop="8dp"
                android:text="Non-surgical (Medical Management Only)" />
        </RadioGroup>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_marginTop="16dp"
            android:backgroundTint="#245671"
            android:textColor="@android:color/white" />

        <!-- Login Link -->
        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:text="Already have an account? Login"
            android:textColor="#245671" />
    </LinearLayout>
</ScrollView>