<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@android:color/white" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Border (optional, you can remove if not needed) -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Shadow / Elevation workaround for pre-Lollipop -->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />
</shape>